<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>  
    
    
    
    <!-- PAra la Barra -->

	<style name="CustomWindowTitleBackground">
		<item name="android:background">#323331</item>
    </style>
    
    <style name="CustomTheme" parent="android:Theme">
    	<item name="android:windowTitleSize">35dip</item>
    	<item name="android:actionBarSize">100dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    
    <!-- Pruebas Nueva Barra -->
	<style name="CustomBackground">
		<item name="android:background">#FFFFFF</item>
    </style>
	   
    <style name="BarraTheme" parent="android:Theme">
        <item name="android:windowTitleSize">53dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomBackground</item>
    	
    </style>
    
    <style name="spinnerItemStyle">
        <item name="android:padding">1dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
 </resources> 