<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondosalirapp"
    android:orientation="vertical" >
    
    <ImageButton
        android:id="@+id/cerrarventanahistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:onClick="CerrarVentanaHistorico"
        android:src="@drawable/botonsaliradicionales" />

    <TextView
        android:id="@+id/textoborrarhistorico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/avisoborrarhistorico" 
        android:layout_marginTop="15dp"
        android:layout_gravity="center"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        >
        
        <ImageButton
            android:id="@+id/siborrarhistorico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="BorrarHistorico"
            android:src="@drawable/botonaceptar" />
        
        <ImageButton
            android:id="@+id/noborrarhistorico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:onClick="CerrarVentanaHistorico"
            android:src="@drawable/botoncancelar" />
    </LinearLayout>

</LinearLayout>