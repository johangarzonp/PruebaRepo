<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/solicitudcolombia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ffffff"
        android:orientation="vertical" >
        
    <TextView
        android:id="@+id/avisodireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="COMPLETE SU DIRECCION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal" 
        />

    <EditText
        android:id="@+id/compdireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:inputType="textCapWords"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/infobarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ALGO"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/compbarrio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:inputType="textCapWords"
        android:ems="10" >

        <requestFocus />
    </EditText>

    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp"
        >

        
        
        <Button
            android:id="@+id/leerfrecuentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="LeerFrec"
            android:text="Ver Favoritos"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textAlignment="center"/>
        
        <Button
            android:id="@+id/guardarfrecuentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:onClick="GuardarFrec"
            android:text=" Agregar  Favoritos "
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textAlignment="center"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"  
        >
    <TextView
        android:id="@+id/avisometododepago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Forma de Pago "
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/metododepago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center"/>
    </LinearLayout>
    
      
       <ImageButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:onClick="PedirTaxi"
            android:textAlignment="center"
            android:src="@drawable/nvobotonsolicitar" /> 
        
    </LinearLayout>
</LinearLayout>