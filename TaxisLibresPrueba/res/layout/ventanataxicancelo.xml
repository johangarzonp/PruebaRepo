<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondosalirapp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textotaxislibres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAXIS LIBRES" 
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:layout_gravity="center"/>
    
    <TextView
        android:id="@+id/textotaxicancelo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El vehículo confirmado anteriormente" 
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_gravity="center"/>
    
    <TextView
        android:id="@+id/textotaxicancelo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no puede cumplir el servicio" 
        android:textSize="15dp"
        android:layout_gravity="center"/>
    
    <TextView
        android:id="@+id/textotaxicancelo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ¿Desea solicitar el servicio de nuevo? " 
        android:textSize="15dp"
        android:layout_gravity="center"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        >
        
        <ImageButton
            android:id="@+id/sisolicitarservicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="SiSolicitar"
            android:src="@drawable/botonsi" />
        
        <ImageButton
            android:id="@+id/nosolicitarservicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:onClick="NoSolicitar"
            android:src="@drawable/botonno" />
    </LinearLayout>

</LinearLayout>