<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondohistoricos"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/barrasuphis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/barraarribahistoricos"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/cerrarhistorico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:onClick="SalirHistorico"
            android:src="@drawable/cerrarhistorico" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/listaServicios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:visibility="visible" >
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:id="@+id/layoutbarraabajohis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barrabajaencuesta"
        android:orientation="vertical" >
        
        <ImageButton
            android:id="@+id/botoneliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="BorrarHistorico"
            android:src="@drawable/botoneliminartarjeta" />

    </LinearLayout>

</LinearLayout>